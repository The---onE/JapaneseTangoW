/* pages/tango/mission.wxss */

page {
  height: 100%;
  background-color: #e3edcd;
}

.box {
  height: 100%;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}

.top {
  width: 100%;
}

#counter {
  float: left;
  text-align: left;
  font-size: 24px;
}

#last {
  float: right;
  text-align: right;
  font-size: 20px;
}

.center {
  align-self: center;
  width: 100%;
}

#tango {
  display: flex;
  flex-basis: 100%;
  flex-direction: column;
  align-items: center;
}

#tango text {
  /*white-space:nowrap;*/
}

#pronunciation {
  font-size: 36px;
}

#writing {
  font-size: 42px;
}

#meaning {
  font-size: 28px;
}

.bottom {
  width: 100%;
  display: flex;
}

.bottom button {
  font-size: 32px;
}

#remember {
  flex-basis: 100%;
  background: transparent;
}

#forget {
  flex-basis: 100%;
  background: transparent;
}
